#include <iostream>
using namespace std;
int main() {
    int n, s = 0;
    cout << "Ədədi daxil et: ";
    cin >> n;
    if (n == 0) {
        s= 1;
    } else {
        if (n < 0) n = -n;
        while (n > 0) {
            n /= 10;
            s++;
        }
    }

    cout << "Rəqəmlərin sayı: " << s;

    return 0;
}
